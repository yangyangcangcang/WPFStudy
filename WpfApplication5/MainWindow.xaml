<Window x:Class="WpfApplication5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication5"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <TextBox x:Key="txt">Hello</TextBox>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <!--绑定事件的方式-->
            <!--<Slider x:Name="sd" Width="200" ValueChanged="sd_ValueChanged"></Slider>
            <TextBox Name="txt"/>-->
            
            <!--元素绑定 --><!--
            <Slider x:Name="sd" Width="200"  />
            --><!--默认是双向绑定的  OneWay：单向绑定 一个控件值发生变化 另个一个值不会变化   双向绑定则各自变化--><!--
            <TextBox Text="{Binding ElementName=sd,Path=Value,Mode=OneWay}"/>-->

            <!--<TextBox Text="{Binding Source={StaticResource txt},Path=Text}" FontSize="30"/>-->

            <!--绑定一个 DataContext FallbackValue：设置默认值--><!--
            <TextBox Name="txt" Text="{Binding Content,FallbackValue='Not Found'}" FontSize="40"/>-->
            <TextBox Text="{Binding Name}" FontSize="40"/>

        </StackPanel>
    </Grid>
</Window>
